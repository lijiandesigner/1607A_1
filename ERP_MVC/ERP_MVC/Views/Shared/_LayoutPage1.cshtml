<script>
    function Sign() {
        $.ajax({
            url: "",
            type: "post",
            data: {
                '': JSON.stringify({Eid:@loginResult.EID})
            },
            success: function (data) {
                if (data == 0) {
                    layer.msg('未在打卡时间段!', { icon: 0 });
                }
                else if (data == 1) {
                    layer.msg('签到成功!', { icon: 1 });
                }
                else if (data == 2) {
                    layer.msg('已打卡', { icon: 2 });
                }
            }
        })
    }
</script>