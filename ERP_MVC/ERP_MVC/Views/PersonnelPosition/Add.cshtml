
@{
    ViewBag.Title = "Add";
}

<h2>添加职位</h2>
<link href="~/Content/bootstrap.css" rel="stylesheet" />
<script src="~/Scripts/jquery-3.3.1.js"></script>
<table class="table table-hover">
    <tr>
        <td>职位名称</td>
        <td><input id="txtzwmc" type="text" placeholder="由2-3个汉字组成" onblur="fun1();" /><span id="s1"></span></td>
    </tr>
    <tr>
        <td>职位级别</td>
        <td><input id="txtzwjb" type="text" placeholder="由1个数字组成" onblur="fun2();" /><span id="s2"></span></td>
    </tr>
    <tr>
        <td>底薪</td>
        <td><input id="txtdx" type="text" placeholder="0-99999" onblur="fun3();" /><span id="s3"></span></td>
    </tr>
    <tr>
        <td>权限</td>
        <td><input id="txtqx" type="text" /></td>
    </tr>
    <tr>
        <td></td>
        <td>
            <input id="Button2" type="button" value="保存" class="btn btn-default" onclick="save()" />　　　<input id="Button1" type="button" value="返回" class="btn btn-default" onclick="location.href='/PersonnelPosition/Index'" />
        </td>
    </tr>
</table>
<script>
    var flag = false;
    function fun1() {
        var username = $("#txtzwmc").val();
        var reg = /^[\u4e00-\u9fa5]{2,3}$/;
        if (username == '') {
            $("#s1").html("<font color='red'>职位名称不能为空</font>");
            return false;
        } else {
            if (reg.test(username)) {
                $("#s1").html("<font color='green'>✔</font>");
                return true;
                $.get("{:url('One/Only')}?username=" + username, function (data) {
                    if (data > 0) {
                        $("#s1").html("<font color='red'>职位已经存在</font>");
                        flag = false;

                    } else {
                        $("#s1").html("<font color='green'>✔</font>");
                        flag = true;
                    }

                })
                return flag;

            } else {
                $("#s1").html("<font color='blue'>由2-3汉字组成</font>");
                return false;
            }
        }
    }
    function fun2() {
        var username = $("#txtzwjb").val();
        var reg = /^\w{1}$/;
        if (username == '') {
            $("#s2").html("<font color='red'>职位级别不能为空</font>");
            return false;
        } else {
            if (reg.test(username)) {
                $("#s2").html("<font color='green'>✔</font>");
                return true;
                $.get("{:url('One/Only')}?username=" + username, function (data) {
                    if (data > 0) {
                        $("#s2").html("<font color='red'>已经存在</font>");
                        flag = false;

                    } else {
                        $("#s2").html("<font color='green'>✔</font>");
                        flag = true;
                    }

                })
                return flag;

            } else {
                $("#s2").html("<font color='blue'>由1位数字组成</font>");
                return false;
            }
        }
    }
    function fun3() {
        var username = $("#txtdx").val();
        var reg = /^\w{0,5}$/;
        if (username == '') {
            $("#s3").html("<font color='red'>底薪不能为空</font>");
            return false;
        } else {
            if (reg.test(username)) {
                $("#s3").html("<font color='green'>✔</font>");
                return true;
                $.get("{:url('One/Only')}?username=" + username, function (data) {
                    if (data > 0) {
                        $("#s3").html("<font color='red'>已经存在</font>");
                        flag = false;

                    } else {
                        $("#s3").html("<font color='green'>✔</font>");
                        flag = true;
                    }

                })
                return flag;

            } else {
                $("#s3").html("<font color='blue'>格式不对（0-99999）</font>");
                return false;
            }
        }
    }
    function save() {
        if (fun1() && fun2() && fun3()) {
            save1();
        } else {
            alert("请输入正确信息")
        }
    }
    //添加
    function save1() {
        var zwmc = $("#txtzwmc").val();
        var zwjb = $("#txtzwjb").val();
        var dx = $("#txtdx").val();
        var qx = $("#txtqx").val();
        if (zwmc == "") {
            alert("信息不能为空");
        } else {
            $.ajax({
                url: 'http://localhost:59776/api/position',
                type: 'post',
                data: {
                    '': JSON.stringify({ PoName: zwmc, PoLeave: zwjb, PoMinMoney: dx, Permission: qx })
                },
                dataType: 'text',
                success: function (data) {
                    if (data > 0) {
                        alert("添加成功");
                        location.href = '/PersonnelPosition/Index';
                    }
                    else {
                        alert("添加失败");
                    }
                }
            });
        }
    }
</script>
