<link href="~/Content/bootstrap.css" rel="stylesheet" />
<script src="~/Scripts/jquery-3.3.1.js"></script>
<h2>员工信息表</h2>
<div>
    <table class="table table-hover">
        <tr>
            <td align="right"><h4>显示</h4></td>
            <td>
                <select id="Select1" class="btn btn-default">
                    <option>10</option>
                    <option>9</option>
                </select>页
            </td>
            <td align="right">
                <select id="selzw">
                    <option value="true">在职</option>
                    <option value="false">离职</option>
                </select>
                <input id="txtbh" type="text" />
                <input id="txtxm" type="text" />
                <input id="Button1" type="button" value="查询" onclick="sel()" class="btn btn-default" />
                <input id="Button1" type="button" value="添加员工信息" class="btn btn-default" onclick="location.href='/PersonnelInfomation/Add'" />
            </td>
        </tr>
    </table>
    <table class="table table-hover">
        <thead style="background-color:#00cdff">
            <tr>
                <td>ID</td>
                <td>员工编号</td>
                <td>姓名</td>
                <td>性别</td>
                <td>手机号</td>
                <td>邮箱</td>
                <td>身份证</td>
                <td>头像</td>
                <td>职位</td>
                <td>操作</td>
            </tr>
        </thead>
        <tbody id="tb"></tbody>
    </table>
    <table class="table table-hover">
        <tr>
            <td></td>
            <td align="right">
                <input id="Button1" type="button" value="首页" class="btn btn-default" />
                <input id="Button1" type="button" value="上一页" class="btn btn-default" />
                <input id="Button1" type="button" value="①" class="btn btn-default" />
                <input id="Button1" type="button" value="②" class="btn btn-default" />
                <input id="Button1" type="button" value="③" class="btn btn-default" />
                <input id="Button1" type="button" value="下一页" class="btn btn-default" />
                <input id="Button1" type="button" value="尾页" class="btn btn-default" />
            </td>
        </tr>
    </table>
</div>
<script>
