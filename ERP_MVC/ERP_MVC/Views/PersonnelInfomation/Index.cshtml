    //显示
    $(function () {
        $.ajax({
            url: 'http://localhost:59776/api/EmployeeInfo?Pstatic=true',
            type: 'get',
            dataType: 'json',
            success: function (data) {
                for (var i = 0; i < data.length; i++) {
                    $("#tb").append("<tr><td>" + data[i].EID + "</td><td>" + data[i].ENo + "</td><td>" + data[i].EName + "</td><td>" + (data[i].Esex == true ? "男" : "女") + "</td><td>" + data[i].Ephone + "</td><td>" + data[i].Eemail + "</td><td>" + data[i].EcardID + "</td><td>" + data[i].Eheart + "</td><td>" + data[i].Pid + "</td><td><input id='btnEdit' type='button' value='修改' onclick='edit(" + data[i].EID + ")' /><input id='btnDel' type='button' value='删除' onclick='del(" + data[i].EID + ")' /></td></tr>");
                }
            }
        });
    });
    //删除
    function del(id) {
        if (confirm("确认删除么？")) {
            $.ajax({
                url: 'http://localhost:59776/api/EmployeeInfo/' + id,
                type: 'delete',
                dataType: 'text',
                success: function (data) {
                    if (data > 0) {
                        alert("删除成功");
                        location.reload();
                    }
                    else {
                        alert("删除失败");
                    }
                }
            });
        }
    }
    //查询
    function sel() {
        var zt = $("#selzw").val();
        var bh = $("#txtbh").val();
        var xm = $("#txtxm").val();
        var str = "";
        if (bh==""&&xm=="") {
            str += "";
        } else if (bh == "" && xm != "") {
            str += "?Pstatic=" + zt + "&ename=" + xm;
        } else if (bh != "" && xm == "") {
            str += "?Pstatic=" + zt + "&eno=" + bh;
        } else {
            str += "?Pstatic=" + zt + "&eno=" + bh + "&ename=" + xm;
        }
        $.ajax({
            url: 'http://localhost:59776/api/EmployeeInfo'+str,
            type: 'get',
            success: function (data) {
                $("#tb").empty();
                for (var i = 0; i < data.length; i++) {
                    $("#tb").append("<tr><td>" + data[i].EID + "</td><td>" + data[i].ENo + "</td><td>" + data[i].EName + "</td><td>" + (data[i].Esex == true ? "男" : "女") + "</td><td>" + data[i].Ephone + "</td><td>" + data[i].Eemail + "</td><td>" + data[i].EcardID + "</td><td>" + data[i].Eheart + "</td><td>" + data[i].Pid + "</td><td><input id='btnEdit' type='button' value='修改' onclick='edit(" + data[i].EID + ")' /><input id='btnDel' type='button' value='删除' onclick='del(" + data[i].EID + ")' /></td></tr>");
                }
            }
        })
    }
    function edit(id) {
        location.href = "/PersonnelInfomation/Edit/" + id;
    }
</script>
